# Firebase Client SDK (Public - exposed to browser)
# For production: Get these from Firebase Console > Project Settings
NEXT_PUBLIC_FIREBASE_API_KEY=demo-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=demo-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-project
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=demo-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123

# Enable Firebase Emulators for local development
# Set to "true" to use local Auth and Firestore emulators
NEXT_PUBLIC_USE_EMULATORS=true

# Firebase Admin SDK (Private - server-side only)
# For production: Get from Firebase Console > Service Account
FIREBASE_PROJECT_ID=demo-project
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@demo-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMOCK_PRIVATE_KEY\n-----END PRIVATE KEY-----"

# OpenAI API Key (Private - server-side only)
# Leave empty to use mock responses for local development
# OPENAI_API_KEY=sk-your-api-key-here
